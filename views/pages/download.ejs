<% if (flash.success) { %>
	<div class="alert alert-success" role="alert">
		<strong><%= flash.success %></strong>
	</div>
<% } %>
	
<% if (flash.error) { %>
	<div class="alert alert-danger" role="alert">
		<strong><%= flash.error %></strong>
	</div>
<% } %>
<section class="cprecap-banner">
	<div class="jumbotron jumbotron-fluid">
		<div class="row justify-content-center">
			<div class="cprecap-banner-body col-11">
				<h1><span>Welcome to the BETA Version of the ChinesePod Express App Forum -</span><br>
					The Community you deserve, help us make it better for you!</h1>
				
				<% if(isBeta) { %>
				<p class="button-comb">
					<strong>Download</strong> Our Beta APP <br>
					<a class="btn btn-danger cprecap-btn-try rounded-pill pt-3 pb-3 pl-5 pr-5 mb-3" href="https://play.google.com/store/apps/details?id=com.chinesepod.express">Mobile APP</a>&nbsp;
					<a class="btn btn-danger cprecap-btn-try rounded-pill pt-3 pb-3 pl-5 pr-5 mb-3" href="https://play.google.com/apps/testing/com.chinesepod.express">Web APP</a><br>

					<strong>Already have the APP?</strong> <br>
					<a class="btn btn-danger cprecap-btn-try rounded-pill pt-3 pb-3 pl-5 pr-5 mb-3" href="/beta/forums">Send Feedback</a>
					</p>
				<% } else { %> 
					<% if(!userData) { %>
					<p style="font-style: italic;">Please login and Enroll as a ChinesePod App Beta Tester <br><a class="btn btn-primary" href="https://www.chinesepod.com/login">Login</a></p>
					<% } else { %>
						<p class="button-comb"><strong>Hi <%= userData.username %>,</strong> To participate with our Beta App, please agree with our terms and conditions below.</p>
					<% } %>
				<% } %>
			</div>
		</div>

	</div>
</section>

<% if(userData && !isBeta) { %>
<section class="cprecap-actions-banner">
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-11 text-center">
				<h3>Participate with our ChinesePod Beta Program</h3>
				<form action="/beta/forums/participate" method="post">


					<div class="form-group-inline">
						<input id="betaAgreement" type="checkbox" name="agreement" required>
						<label for="betaAgreement">I agree with the terms and conditions</label>
					</div>

					<div class="form-group">
						<input type="submit" class="btn btn-primary" value="Participate!">
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

<% } %>

