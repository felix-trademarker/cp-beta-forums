<% if (flash.success) { %>
	<div class="alert alert-success" role="alert">
		<strong><%= flash.success %></strong>
	</div>
<% } %>
	
<% if (flash.error) { %>
	<div class="alert alert-danger" role="alert">
		<strong><%= flash.error %></strong>
	</div>
<% } %>
<section class="cprecap-banner">
	<div class="jumbotron jumbotron-fluid">
		<div class="row justify-content-center">
			<div class="cprecap-banner-body col-11">
				<h1><span>Welcome to the BETA Version of the ChinesePod Express App Forum -</span><br>
					The Community you deserve, help us make it better for you!</h1>

				<p v-if="userData && userData.token && userData.isBetaTester" class="button-comb">
					<strong>Download</strong> Our Beta APP BY:<br>
					<a class="btn btn-danger cprecap-btn-try rounded-pill pt-3 pb-3 pl-5 pr-5 mb-3" target="blank" href="/beta/download/mobile">Mobile</a>&nbsp;
					<a class="btn btn-danger cprecap-btn-try rounded-pill pt-3 pb-3 pl-5 pr-5 mb-3" target="blank" href="/beta/download/web">Web</a><br>

					<strong>Already have the APP?</strong> <br>
					<a class="btn btn-danger cprecap-btn-try rounded-pill pt-3 pb-3 pl-5 pr-5 mb-3" href="/beta/forums">Send Feedback</a>
				</p>

				<p v-if="!userData.token" style="font-style: italic;">Please login and Enroll as a ChinesePod App Beta Tester <br><a class="btn btn-primary" target="_blank" href="https://www.chinesepod.com/login">Login</a></p>
				<p v-if="userData.token && !userData.isBetaTester" class="button-comb"><strong>Hi <%= userData && userData.username ? userData.username : '' %>,</strong> To participate with our Beta App, please agree with our terms and conditions below.</p>

			</div>
		</div>

	</div>
</section>


<section v-if="userData.token && !userData.isBetaTester" class="cprecap-actions-banner">
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-11 text-center">
				<h3>Participate with our ChinesePod Beta Program</h3>
				<%- include('../partials/participate-block'); %>
			</div>
		</div>
	</div>
</section>



