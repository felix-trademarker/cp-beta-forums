<section class="cprecap-info" id="about">
	<div class="container-xl" style="min-height:65vh">
		
		<nav aria-label="breadcrumb">
			<ol class="breadcrumb">
				<li class="breadcrumb-item"><a href="#">Dashboard</a></li>
				<li class="breadcrumb-item active" aria-current="page">Topics</li>
			</ol>
		</nav>

        <div class="row justify-content-center box-bg-container">

			<% if(message) { %>
				<div class="alert alert-<%= message && message.status ? 'success':'error' %>" role="alert">
					<%= message.message %>
				</div>
			<% } %>
			<div class="col-md-12">
				<h2>Topics</h2>
				<% if(subtopics && subtopics.length > 0) { %>
					<table class="table">
						<tr>
							<th>Category</th>
							<th>Topic</th>
							<th>Description</th>
							<th>Status</th>
							<th>Action</th>
						</tr>
						<% subtopics.forEach(function(subtopic,key) {  %>
							<tr>
								<td><%= subtopic.parentName %></td>
								<td><%= subtopic.name %></td>
								<td><%- subtopic.description.replace("\n","<br>") %></td>
								<td><%= subtopic.status %></td>
								<td>
									<a href="/beta/admin-dashboard/topics/edit/<%= subtopic._id %>"><i class="fa fa-pen"></i></a>&nbsp;
									<a href="/beta/admin-dashboard/topics/delete/<%= subtopic._id %>"><i class="fa fa-trash"></i></a>
								</td>
							</tr>
						<% }) %>
					</table>
				<% } else { %>
					<p>Sorry, no topics found!</p>
				<% } %>
			</div>

			<div class="col-md-12">
				<hr>
				<h2>Add Topic</h2>


				
				<form method="post">

					<div class="form-group">
						<label>Category</label>
						<select name="parentName" class="form-control">
							<% topics.forEach(function(topic,key) {  %>
								<option value="<%= topic.name %>"><%= topic.name %></option>
							<% }) %>
						</select>
					</div>

					<div class="form-group">
						<label>Topic</label>
						<input type="text" name="name" class="form-control" required>
					</div>

					<div class="form-group">
						<label>Description</label>
						<textarea class="form-control" name="description" rows="3"></textarea>
					</div>

					<div class="form-group">
						<label>Status</label>
						<select name="status" class="form-control">
						  <option value="publish">Publish</option>
						  <option value="draft">Draft</option>
						  <option value="archive">Archive</option>
						</select>
					</div>

					<div class="form-group">
						<input type="submit" value="Add">
					</div>

				</form>
			</div>

		
		</div>
    </div>
</section>
